<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mint_cream"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/backarrow"
                    />
                <TextView
                    android:id="@+id/TextView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="   Set your Security PIN"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
        </TableRow>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="70dp"
            android:contentDescription="TODO"
            android:background="@drawable/phonelink"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Set your 6 digit PIN for 2-factor \n authentication to your DigiLocker Account"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="19dp"

            />

        <com.goodiebag.pinview.Pinview
            android:id="@+id/pinview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cursorVisible="true"
            android:layout_marginTop="41dp"
            app:inputType="number"
            app:password="false"
            app:pinHeight="40dp"
            app:pinLength="6"
            app:textSize="7dp"
            app:pinWidth="40dp"
            app:pinBackground="@color/white"
            android:textColor="@color/black"
            />



        <Button
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn"
            android:text="Next"
            android:textAllCaps="false"
            android:layout_gravity="right"
            android:layout_marginTop="40dp"
            android:enabled="false"
            android:textColor="@color/black"
            android:background="@drawable/buttonshape"

            />
</LinearLayout>
